<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context=".ui.activities.GameActivity">

    <!--<androidx.recyclerview.widget.RecyclerView
        android:id="@+id/code_pipeline_r_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal" />-->

    <LinearLayout
        android:id="@+id/coding_buttons"
        android:layout_width="405dp"
        android:layout_height="48dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/while_loop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WHILE" />

        <Button
            android:id="@+id/if_statement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IF" />

        <Button
            android:id="@+id/for_loop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FOR" />
    </LinearLayout>

    <com.example.visualcoding.ui.activities.CodeMapDrawingSurface
        android:id="@+id/code_map_drawing_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="1dp"/>

</LinearLayout>